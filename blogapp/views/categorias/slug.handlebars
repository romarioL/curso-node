<h2>{{categoria.nome}}</h2>



{{#each postagens }}



<div class="card">
<div class="card-body">
<h4>{{titulo}}</h4>
<p{{descricao}}</p>
<small>{{data}}</small>
<a href="/admin/postagens/edit/{{_id}}" class="btn btn-success">Editar postagens</a>
<a href="/admin/postagens/deletar/{{_id}}" class="btn btn-danger">Deletar postagem</a>
</div>
</div>


{{else}}

<p>Nenhuma postagem registrada nessa categoria</p>

{{/each}}

