<h2>Lista de categorias</h2>

<a href="/admin/categorias/add"class="btn btn-success">Nova categoria</a>

{{#each categorias}}

<div class="card mt-5 mb-5">
 <div class="card-body">
   <h4>{{nome}}</h4>
   <small>{{slug}}</small>
   <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success">Editar categoria</a>
   <form action="/admin/categorias/deletar" method="POST">
    <input type="hidden" name="id" value={{_id}}>
    <button type="submit" class="btn btn-danger mt-4">Deletar</button>
   </form>
 </div>
</div>

{{else}}

<h1>Nenhuma categoria</h1>

{{/each}}