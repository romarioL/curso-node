{{/each}}
<form action="/admin/categorias/edit" method="POST">
  <div class="form-group">
    <input type="hidden" class="form-control" name="id" placeholder="Digite o nome da categoria" value="{{categoria._id}}" >
    <label for="nome">Nome</label>
    <input type="text" class="form-control" name="nome" placeholder="Digite o nome da categoria" value="{{categoria.nome}}">
  </div>
  <div class="form-group">
    <label for="slug">Slug</label>
    <input type="text" class="form-control" name="slug" placeholder=" Slug da categoria" value="{{categoria.slug}}">
  </div>
  <button type="submit" class="btn btn-primary">Editar categoria</button>
</form>